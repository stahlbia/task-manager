{
  "name": "task-manager",
  "version": "1.0.0",
  "description": "Desenvolver uma API para um sistema de Gestão de Tarefas Colaborativas, permitindo que usuários criem, editem, atribuam e concluam tarefas. A API seguirá uma arquitetura MVC, garantindo boas práticas.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.2",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.3.2",
    "fastify-type-provider-zod": "^4.0.2",
    "knex": "^3.1.0",
    "open": "^10.1.2",
    "pg": "^8.16.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^22.15.17",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "db:migrate:make": "npx knex migrate:make --migrations-directory ./src/db/migrations",
    "db:migrate:latest": "npx knex migrate:latest --knexfile knexfile.js",
    "db:migrate:rollback": "npx knex migrate:rollback --knexfile knexfile.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stahlbia/task-manager.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/stahlbia/task-manager/issues"
  },
  "homepage": "https://github.com/stahlbia/task-manager#readme"
}
